global
	log /dev/log	local0
	log /dev/log	local1 notice
	chroot /var/lib/haproxy
	stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
	stats timeout 30s
	user haproxy
	group haproxy
	daemon

	# Default SSL material locations
	ca-base /etc/ssl/certs
	crt-base /etc/ssl/private

	ssl-default-bind-ciphers {{ haproxy_ssl_default_bind_ciphers }}
	ssl-default-bind-ciphersuites {{ haproxy_ssl_default_bind_ciphersuites }}
	ssl-default-bind-options {{ haproxy_ssl_default_bind_options }}

	# Added by me
	maxconn				{{ haproxy_maxconn }}
	tune.ssl.default-dh-param	{{ haproxy_tune_ssl_default_dh_param }}

defaults
	log	global
	mode	http
	option	httplog
	option	dontlognull
        timeout connect 5000
        timeout client  50000
        timeout server  50000
	errorfile 400 /etc/haproxy/errors/400.http
	errorfile 403 /etc/haproxy/errors/403.http
	errorfile 408 /etc/haproxy/errors/408.http
	errorfile 500 /etc/haproxy/errors/500.http
	errorfile 502 /etc/haproxy/errors/502.http
	errorfile 503 /etc/haproxy/errors/503.http
	errorfile 504 /etc/haproxy/errors/504.http

	# Added by me
	option				{{ haproxy_option_a }}
	option				{{ haproxy_option_b }}

# Webs
frontend http_frontend
	# For debugging
	log /dev/log local0 debug

	bind {{ haproxy_bind }}
	http-request set-header X-Forwarded-Proto https

{% for site in haproxy_sites %}
	acl web_host_{{ site }} hdr(host) -i {{ site }}.{{ global_domain }}
{% endfor %}
{% for site in haproxy_sites %}
	use_backend {{ site }} if web_host_{{ site }}
{% endfor %}
{% for site in haproxy_sites %}
backend {{ site }}
	balance leastconn
	http-request set-header X-Client-IP %[src]
	http-request set-header X-Forwarded-Port %[dst_port]
	http-request add-header X-Forwarded-Proto https if { ssl_fc }
	server {{ site }} {{ network_inventory[site]['ip'] }}:{{ network_inventory[site]['port'] }} check ssl verify none
{% endfor %}
listen stats
	bind :32700
	stats enable
	stats uri /
	stats hide-version
	stats auth {{ auth_stats_user }}:{{ auth_stats_password }}
